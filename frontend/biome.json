/* ------------------------------------------ biome.jsonc -- ;

         _//            Biome can be invoked directly from
        .. ~~-_         the CLI using pnpm biome.
   ___m<___m___~.___
   _|__|__|__|__|__|    Biome binary is located inside
   |__|__|__|__|__|_    node_modules/.bin.

/* -------------------------------------------------------- */

{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": [
            "src/**/*.{ts,tsx,js,jsx,json,jsonc,css}",
            "scripts/**/*.{ts,tsx,js,jsx}",
            "*.{ts,tsx,js,jsx,json,jsonc,css}",
            "!src/components/ui/*.{ts,tsx,js,jsx}",
            "!src/components/ApiTester.tsx"
        ],
        "ignoreUnknown": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": false, //g
        "defaultBranch": "main"
    },

    /*                             ╭---------╮
    -------------------------------╯ Linters ╰---*/
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useButtonType": "off"
            },
            "correctness": {
                "noUnusedVariables": "warn",
                "noUnusedImports": "error",
                "useExhaustiveDependencies": "off",
                "useHookAtTopLevel": "error"
            },
            "security": {
                "recommended": true
            },
            "style": {
                "noNonNullAssertion": "off",
                "useTemplate": "off",
                "noUnusedTemplateLiteral": "off",
                "useBlockStatements": "off"
            },
            "performance": {
                "recommended": true,
                "noAccumulatingSpread": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noArrayIndexKey": "warn",
                "noDuplicateTestHooks": "error",
                "noExportsInTest": "error",
                "noFocusedTests": "error",
                "noThenProperty": "warn"
            }
        },
        "includes": [
            "src/**/*.{ts,tsx,js,jsx}",
            "scripts/**/*.{ts,tsx,js,jsx}",
            "**/*.ts"
        ]
    },

    /*                          ╭------------╮
    ----------------------------╯ Formatters ╰---*/
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 40,
        "lineEnding": "lf",
        "attributePosition": "auto"
    }, //c
    "javascript": {
        "formatter": {
            "lineWidth": 90,
            "indentStyle": "space",
            "indentWidth": 4,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "trailingCommas": "all",
            "semicolons": "always",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": true,
            "quoteStyle": "double",
            "attributePosition": "auto"
        }
    }, //d
    "json": {
        "formatter": {
            "enabled": true,
            "lineWidth": 75,
            "indentWidth": 4,
            "trailingCommas": "none",
            "indentStyle": "space"
        },
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    },
    "css": {
        "formatter": {
            "enabled": true,
            "indentWidth": 4,
            "indentStyle": "space"
        },
        "parser": {}
    },

    /*                           ╭-----------╮
    -----------------------------╯ Overrides ╰---*/
    "overrides": [
        {
            "includes": [".vscode/**"],
            "json": {
                "parser": {
                    "allowComments": true,
                    "allowTrailingCommas": true
                }
            },
            "formatter": {
                "indentWidth": 4
            }
        }
    ]
}

/* --------------------------------------------- comments -- ;

   pnpm biome check          # Runs Biome.
   pnpm biome check --write  # Writes safe fixes.

   [a] ignore takes precedence over include.
   [e] all tools will ignore these files.

   [f] only the formatter will ignore these files.
       Use // biome-ignore format: description
       to ignore partials in the source code.

   [g] all tools will ignore the stuff in .gitignore.
   [c] global formatting options.
   [d] language specific formatting options.

   [b] jsonc is problematic with sublimetext.
       https://biomejs.dev/reference/configuration/

/* -------------------------------------------------------- */
